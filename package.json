{
  "name": "backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prestart": "sequelize-cli db:migrate",
    "start": "node ./bin/www",
    "dev": "LOG_LEVEL=debug nodemon ./bin/www",
    "db": "npx sequelize-cli db:migrate",
    "prettier": "prettier --write '**/*.{js,json,html,md,css,scss}'"
  },
  "dependencies": {
    "connect-session-sequelize": "^6.0.0",
    "convict": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "dotenv": "^8.1.0",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "http-errors": "^1.7.3",
    "morgan": "~1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.19.6",
    "sequelize-cli": "^5.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,html,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  }
}

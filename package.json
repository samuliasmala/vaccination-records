{
  "name": "backend",
  "version": "0.3.0",
  "private": true,
  "scripts": {
    "prestart": "sequelize db:migrate",
    "start": "node ./bin/www",
    "dev": "LOG_LEVEL=debug nodemon ./bin/www",
    "build": "rm -rf bu && apidoc -i routes/ -o build/apidoc/ && sed -i 's|<body class=\"container-fluid\">|<body>|g' build/apidoc/index.html",
    "db": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "debugger": "LOG_LEVEL=debug node --inspect-brk=0.0.0.0:9229 ./bin/www",
    "prettier": "prettier --write '**/*.{js,json,html,md,css,scss}'",
    "lint": "eslint --fix \"**/*.js\""
  },
  "dependencies": {
    "apidoc": "^0.18.0",
    "bcrypt": "^3.0.6",
    "connect-session-sequelize": "^6.0.0",
    "convict": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "~4.16.1",
    "express-session": "^1.17.0",
    "express-validator": "^6.2.0",
    "helmet": "^3.21.2",
    "http-errors": "^1.7.3",
    "mailgun-js": "^0.22.0",
    "moment-timezone": "^0.5.27",
    "morgan": "~1.9.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.19.6",
    "sequelize-cli": "^5.5.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "1.19.1"
  },
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,html,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "apidoc": {
    "name": "Vaccination eRecord API documentation",
    "version": "1.0.0",
    "description": "Description of Vaccination eRecord API documentation. ",
    "url": "https://vaccine-backend.herokuapp.com/api"
  }
}
